header.header
  nav.nav.nav--tours
    a.nav__el(href='/') Home
    a.nav__el(href='/sniper') My sniper
    a.nav__el(href='/sniper/unreg') Bitcoins
    if user 
      a#viewSniper.nav__el View Sniper
      a#viewLog.nav__el View Logs
  div.header__logo
    img(src='/img/logo-white.png' alt='BCSniper logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up